@page
@model ASPNETIdentity.Areas.Identity.Pages.MyAccount.LoginModel
@{
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Log in</button>
    </div>
</form>

<div>Or</div>
<form method="post" action="~/Identity/MyAccount/ExternalLogin">
    @foreach(var provider in Model.ExternalLogins)
    {
        <button type="submit" class="btn btn-info" name="provider" value="@provider.Name">Connect with @provider.DisplayName</button>
    }
</form>
